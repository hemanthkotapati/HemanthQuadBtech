<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/index.css">
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

    <!-- Google Icon Font -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    
    <title>HODLINFO | ₹ <%= ((data[0].high + data[0].low)/ 2).toLocaleString()%></title>
</head>

<body id="body">
    <nav class="navbar navbar-cust navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-logo site-name" href="#">HODLINFO</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav navbar-middle">
                    <li class="nav-item dropdown">
                        <a class="navbar-button dropdown-toggle" href="#" id="inrDropdown" role="button"
                            data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            INR
                        </a>
                        <div class="dropdown-menu" aria-labelledby="inrDropdown">
                            <a class="dropdown-item" href="#">INR</a>
                        </div>
                    <li class="nav-item dropdown">
                        <a class="navbar-button dropdown-toggle" id="changeName" href="#" id="btcDropdown" role="button"
                            data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <%= unit.toUpperCase() %>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="btcDropdown">
                            <a class="dropdown-item" href="/" value="btc">BTC</a>
                            <a class="dropdown-item" href="/eth" value="eth">ETH</a>
                            <a class="dropdown-item" href="/usdt" value="usdt">USDT</a>
                            <a class="dropdown-item" href="/xrp" value="xrp">XRP</a>
                            <a class="dropdown-item" href="/trx" value="trx">TRX</a>
                            <a class="dropdown-item" href="/dash" value="dash">DASH</a>
                            <a class="dropdown-item" href="/zec" value="zec">ZEC</a>
                            <a class="dropdown-item" href="/xem" value="xem">XEM</a>
                            <a class="dropdown-item" href="/iost" value="iost">IOST</a>
                            <a class="dropdown-item" href="/win" value="win">WIN</a>
                            <a class="dropdown-item" href="/btt" value="btt">BTT</a>
                            <a class="dropdown-item" href="/wrx" value="wrx">WRX</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="navbar-button" href="https://wazirx.com/invite/sp7pvbt6" target="__blank">Buy BTC</a>
                    </li>
                </ul>
                <ul class="navbar-nav navbar-end">
                    <li class="nav-item" style="display: flex;align-items: center;">
                        <a class="navbar-button-contact" id="clock">60</a>
                    </li>
                    <li class="nav-item">
                        <a class="navbar-button-contact" href="/telegram" style="font-size: 15px;">Connect Telegram</a>
                    </li>
                    <li class="nav-item theme-toggle-align">
                        <label class="custom-control teleport-switch">
                            <input type="checkbox" class="teleport-switch-control-input" name="themeToggle"> 
                            <span class="teleport-switch-control-indicator"></span>
                        </label>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="details-container">
        <div class="d-flex justify-content-around align-items-center small-header">
            <div class="text-center">
                <div class="small-header-percentage">0.38 %</div>
                <div class="small-header-time">5 Mins</div>
            </div>
            <div class="text-center center-div">
                <div class="small-header-percentage">1.09 %</div>
                <div class="small-header-time">1 Hour</div>
            </div>
            <div class="text-center center-block">
                <div class="center-text">
                    <span class="subText-heading">Best Price to Trade</span>
                </div>
                <div class="amount">₹ <%= ((data[0].high + data[0].low)/ 2).toLocaleString()%></div>
                <div class="center-text">Average <%= data[0].name%> net price including commission</div>
            </div>
            <div class="text-center">
                <div class="small-header-percentage">5.51 %</div>
                <div class="small-header-time">1 Day</div>
            </div>
            <div class="text-center">
                <div class="small-header-percentage">12.73 %</div>
                <div class="small-header-time">7 Days</div>
            </div>
        </div>
    </div>


    <table class="table-alter">
        <thead>
            <tr>
                <th scope="col" class="text-center">#</th>
                <th scope="col" class="text-center">Base Unit</th>
                <th scope="col" class="text-center">Name</th>
                <th scope="col" class="text-center">Last Traded Price</th>
                <th scope="col" class="text-center">Buy / Sell Price</th>
                <th scope="col" class="text-center">Volume</th>
                <th scope="col" class="text-center">Open</th>
                <th scope="col" class="text-center">High / Low</th>
                <th scope="col" class="text-center">Trade Time</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <% i = 1 %>
                <% data.forEach(function(doc) { %>
                    <tr>
                      <td class="text-center"><%= i %></td>
                      <td class="text-center"><%= doc.baseUnit.toUpperCase() %></td>
                      <td class="text-center"><%= doc.name %></td>
                      <td class="text-center">₹ <%= doc.last %></td>
                      <td class="text-center">₹ <%= doc.buy %> / ₹ <%= doc.sell %></td>
                      <td class="text-center"><%= doc.volume %></td>
                      <td class="text-center"><%= doc.open %></td>
                      <td class="text-center">₹ <%= doc.high %> / ₹ <%= doc.low %></td>
                      <td class="text-center"><%= doc.tradeTime %></td>
                    </tr>
                    <% i += 1 %>
                  <% }); %>
            </tr>
        </tbody>
    </table>

    <%- include('footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
   
    <script src="./javascript/index.js"></script>

</body>

</html>